{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "setup-gui",
  "version": "0.1.0",
  "identifier": "com.secure2fa.installer",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Secure 2FA Setup",
        "width": 500,
        "height": 460,
        "resizable": false,
        "decorations": false,
        "center": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}